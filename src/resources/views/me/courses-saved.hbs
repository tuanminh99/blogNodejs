<h2>Khoá học của tôi</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tên khoá học</th>
      <th scope="col" colspan="4">Mô tả</th>
    </tr>
  </thead>
  <tbody>
    {{#each course}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.des}}</td>
      <td>
        <a href="/courses/{{this._id}}/edit">Sửa</a>
      </td>
      <td>
        <a href="#">Xoá</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>