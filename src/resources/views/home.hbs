<div class="container">
  <div class="row">
    {{#each courses}}
    <div class="col-sm-6 col-lg-4">
      <div class="card">
        <a href="/courses/{{this.slug}}">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.image}}">
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <h6 class="card-text">{{this.des}}</h6>
          <a href="#" class="btn btn-primary">Mua khoá học</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>